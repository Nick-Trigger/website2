---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
import { getCollection } from "astro:content";

const posts = (await getCollection("blog")).sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

const last_posts = posts.slice(0, 3);
---

<BaseLayout sideBarActiveItemID="home">
  <div class="pb-12 mt-5">
    <div class="text-xl py-1">Hey there ðŸ‘‹</div>
    <div class="text-5xl font-bold">I'm Nicholas Trigger</div>
    <div class="text-3xl py-3 font-bold">Biomedical Engineering Student at Duke University</div>
    <div class="py-2">
      <text class="text-lg">
        Currently pursuing a B.S. in Biomedical Engineering, with a minor in Chemistry at Duke University. I am passionate about exploring the relationship of engineering, science, and medicine, and my coursework in Biomedical Engineering and Chemistry have provided me with a strong foundation for my future in the field. 
      </text>
    </div>
    <div class="mt-8">
      <a class="btn btn-outline" href="mailto:nicholas.trigger@duke.edu" target="_blank"> Let's connect!</a>
      <a href="https://github.com/manuelernestog/astrofy" target="_blank" class="btn ml-5">Portfolio</a>
      <a href="https://www.linkedin.com/in/nicholas-trigger-7148651aa/" target="_blank" class="btn ml-5">LinkedIn</a>
      <a href="https://github.com/Nick-Trigger" target="_blank" class="btn ml-5">GitHub</a>
    </div>
  </div>

  <div>
    <div class="text-3xl w-full font-bold mb-2">Some projects {"âš™"}</div>
  </div>

  <HorizontalCard
    title="Arterial Line Placement Training Device"
    img="/alptprototype.jpg"
    desc="Easy to use and durable, this training device is designed with students in mind. (VentureWell Summer 2023 Cohort)(Patent Pending)"
    url="#"
    badge="In Development"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Open-Source Dog Activity Tracking Device"
    img="/savinggrace.jpg"
    desc="Led two teams to develop a tracking device for a non-kill dog shelter."
    url="#"
    badge="EGR 101 TA F23"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Duke Club Ski & Board Sign"
    img="/skirender1.png"
    desc="Designed to be portable and durable, looks cool too!"
    url="#"
  />

  <div>
    <div class="text-3xl w-full font-bold mb-5 mt-10">Latest from blog</div>
  </div>

  {
    last_posts.map((post) => (
      <>
        <HorizontalCard
          title={post.data.title}
          img={post.data.heroImage}
          desc={post.data.description}
          url={"/blog/" + post.slug}
          target="_self"
          badge={post.data.badge}
        />
        <div class="divider my-0" />
      </>
    ))
  }
</BaseLayout>
